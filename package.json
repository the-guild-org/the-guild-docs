  "private": true,
  "homepage": "https://github.com/the-guild-org/the-guild-docs#readme",
  "bugs": {
    "url": "https://github.com/the-guild-org/the-guild-docs/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/the-guild-org/the-guild-docs.git"
  },
  "license": "MIT",
  "author": "PabloSzx <pablosaez1995@gmail.com>",
  "scripts": {
    "release": "changeset publish",
    "clean": "rimraf \"{,!(node_modules)/*/}node_modules/\"",
    "dev": "concurrently -r yarn:dev:*",
    "dev:cli": "yarn workspace guild-docs dev",
    "dev:client": "yarn workspace @guild-docs/client dev",
    "dev:example": "yarn workspace basic dev",
    "dev:mdx-remote": "yarn workspace @guild-docs/mdx-remote dev",
    "dev:server": "yarn workspace @guild-docs/server dev",
    "dev:types": "yarn workspace @guild-docs/types dev",
    "lint": "eslint --ignore-path .gitignore .",
    "build": "rimraf \"{,!(node_modules)/*/}dist/\" && concurrently -r \"bob-esbuild tsc && yarn workspaces run build\"",
    "postinstall": "husky install",
    "prettier": "prettier --write --list-different \"**/*.{ts,tsx,json}\"",
    "release:canary": "(node scripts/canary-release.js && yarn build && changeset publish --tag alpha) || echo Skipping Canary..."
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "examples/*",
      "guild-docs"
    ]
  },
  "devDependencies": {
    "@changesets/apply-release-plan": "6.0.0",
    "@changesets/assemble-release-plan": "5.1.2",
    "@changesets/cli": "2.22.0",
    "@changesets/config": "2.0.0",
    "@changesets/read": "0.5.5",
    "@manypkg/get-packages": "1.1.3",
    "@types/node": "16.11.39",
    "@typescript-eslint/eslint-plugin": "5.27.1",
    "@typescript-eslint/parser": "5.27.1",
    "bob-esbuild": "3.2.6",
    "bob-esbuild-cli": "3.0.2",
    "bob-tsm": "0.4.8",
    "chalk": "5.0.1",
    "concurrently": "7.2.1",
    "esbuild": "0.14.42",
    "eslint": "8.17.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-react": "7.30.0",
    "eslint-plugin-react-hooks": "4.5.0",
    "globby": "13.1.1",
    "husky": "7.0.4",
    "next": "12.1.6",
    "prettier": "2.6.2",
    "pretty-quick": "3.1.3",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "rimraf": "3.0.2",
    "semver": "7.3.7",
    "typescript": "4.7.3"
  },
  "engines": {
    "yarn": ">=1.22.18"
  }
}
